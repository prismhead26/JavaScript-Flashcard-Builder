<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
  integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
  crossorigin="anonymous"
/>

<style>
  body {
    background: #353C3D
  }
</style>

<div class="text-center text-light">
  <h1 style="color: #ff9999;">{{note.title}}</h1>
  <h4 class="my-3 py-3">Description: &emsp;{{note.body}}</h4>

  <p>
    <button
      class="btn btn-primary"
      data-bs-toggle="modal"
      data-bs-target="#myModal"
    >Update Flashcard</button>
    <a href="/dashboard" class="px-2"><button class="btn btn-primary">Return to Dashboard</button></a>
    <button
      class="btn btn-primary"
      id="delete-button"
      data-id="{{note.id}}"
    >Delete Flashcard</button>
  </p>
</div>

<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fs-5" id="myModalLabel">Update Flashcard
          Information</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form action="">
          <label for="note-title">title: </label>
          <input class="form-control"
            type="text"
            id="update-note-title"
            value="{{note.title}}"
          /><br />
          <div class="form-group modal-body">
            <label for="note-body" class="col-form-label">Body:</label>
            <textarea class="form-control" id="update-note-body">{{note.body}}</textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button
          class="btn btn-primary"
          id="update-button"
          data-id="{{note.id}}"
        >Submit Note</button>
      </div>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="errorModal"
  tabindex="-1"
  aria-labelledby="errorModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="errorModalLabel">Unable to process the request.
          Please wait, your page is reloading...</h5>

        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >Close</button>

        </div>
      </div>
    </div>
  </div>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
  integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
  crossorigin="anonymous"
></script>

<script src="/js/note.js"></script>