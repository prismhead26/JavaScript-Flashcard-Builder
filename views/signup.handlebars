<style>
  .container {
    width: 400px;
    height: 440px;
  }
</style>
<div class="text-center text-white container border border-5 border-success rounded shadow">
  <h2 class="py-5" style="color: #ff9999">Signup</h2>

  <form class="form signup-form">
    <div class="form-group">
      <label for="name-signup" style="color: #ff9999">name:</label>
      <input class="form-input form-control-sm bg-secondary text-center" type="text" id="name-signup" />
    </div>
    <div class="form-group py-3">
      <label for="username-signup" style="color: #ff9999">username:</label>
      <input class="form-input form-control-sm bg-secondary text-center" type="text" id="username-signup" />
    </div>
    <div class="form-group py-3">
      <label for="password-signup" style="color: #ff9999">password:</label>
      <input class="form-input form-control-sm bg-secondary text-center" type="password" id="password-signup" />
    </div>
    <div class="form-group py-3">
      <button class="btn btn-primary" type="submit">signup</button>
    </div>
  </form>
</div>

<div
  class="modal fade"
  id="errorModal"
  tabindex="-1"
  aria-labelledby="errorModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="errorModalLabel">Unable to create account.
          Please wait, your page is reloading...</h5>

        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >Close</button>

        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/signup.js"></script>